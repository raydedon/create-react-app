{
    "parser": "@typescript-eslint/parser",
    "env": {
        "node": true,
        "commonjs": true,
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks",
        "jest"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-unused-vars": ["error", {
            "ignoreRestSiblings": true
        }],
        "quotes": ["error", "single"]
    },
    "root": true,
    "ignorePatterns": ["**/*.d.ts"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
